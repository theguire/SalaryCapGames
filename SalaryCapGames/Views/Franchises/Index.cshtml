@model IEnumerable<SalaryCapData.Data.Models.Franchise>

@{
    ViewData[ "Title" ] = "Index";
}


<br />
<br />
<h2>List of Franchises</h2>
<hr />
<p>
    @Html.Partial( "_CreateButtonPartial" )
</p>
<div class="form-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor( model => model.Name )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.AbbreviatedName )
                </th>

                <th>
                    @Html.DisplayNameFor( model => model.Points )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.Value )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.NumberOfTrades )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.League )
                </th>
                <th>
                    @Html.DisplayNameFor( model => model.Owner )
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach ( var item in Model )
            {
                <tr>
                    <td>
                        @Html.DisplayFor( modelItem => item.Name )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.AbbreviatedName )
                    </td>
                    <td class="table-data-number">
                        @Html.DisplayFor( modelItem => item.Points )
                    </td>
                    <td class="table-data-number">
                        @Html.DisplayFor( modelItem => item.Value )
                    </td>
                    <td class="table-data-trades">
                        @Html.DisplayFor( modelItem => item.NumberOfTrades )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.League.Name )
                    </td>
                    <td>
                        @Html.DisplayFor( modelItem => item.Owner.Email )
                    </td>
                    <td>
                        @Html.Partial( "_TableButtonPartial", item.Id )
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>