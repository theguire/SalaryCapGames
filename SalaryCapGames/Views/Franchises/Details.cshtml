@model SalaryCapData.Data.Models.Franchise

@{
    ViewData[ "Title" ] = "Details";
}

<br />
<br />
<h2>Franchise Details</h2>
<hr />

<div class="form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="Name"></label>
            </div>
            <div class="col-2">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="AbbreviatedName"></label>
            </div>
            <div class="col-2">
                <input asp-for="AbbreviatedName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="ImageUrl"></label>
            </div>
            <div class="col-2">
                <input asp-for="ImageUrl" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="Points"></label>
            </div>
            <div class="col-2">
                <input asp-for="Points" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="Value"></label>
            </div>
            <div class="col-2">
                <input asp-for="Value" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="NumberOfTrades"></label>
            </div>
            <div class="col-2">
                <input asp-for="NumberOfTrades" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="League"></label>
            </div>
            <div class="col-2">
                <input asp-for="League.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="DateCreated"></label>
            </div>
            <div class="col-2">
                <input asp-for="DateCreated" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="DateModified"></label>
            </div>
            <div class="col-2">
                <input asp-for="DateModified" class="form-control" />
            </div>
        </div>
    </fieldset>


    <div class="form-group">
        @Html.Partial( "_EditButtonPartial", @Model.Id )
        @Html.Partial( "_BackToListButtonPartial" )
    </div>
</div>
