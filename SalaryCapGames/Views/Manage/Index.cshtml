@model SalaryCapGames.Views.WebViewModels.ManageViewModels.IndexViewModel
@{
    ViewData[ "Title" ] = "Profile";
    ViewData.AddActivePage( ManageNavPages.Index );
}

<br />
<h2 class="text-info">@ViewData[ "Title" ]</h2>
<hr />
@Html.Partial( "_StatusMessage", Model.StatusMessage )
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" hidden />
                @if ( Model.IsEmailConfirmed )
                {
                    <div class="input-group">
                        <input asp-for="Email" disabled class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" disabled class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync( "_ValidationScriptsPartial" )
}
