                <label class="custom-label" asp-for="MaxNumberFranchises"></label>
            </div>
            <div class="col-4">
                <input asp-for="MaxNumberFranchises" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label" asp-for="IsPrivate"></label>
            </div>
            <div class="col-4">
                <input asp-for="IsPrivate" class="form-control" />
