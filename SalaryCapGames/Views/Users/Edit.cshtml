@model SalaryCapData.Data.Models.ApplicationUser

@{
    ViewData[ "Title" ] = "Edit";
}

<br />
<br />
<h4>Edit User</h4>
<hr />
<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        @*<input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="Points" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="NumberOfTrades" />*@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" disabled class="form-control" />
                <span class="input-group-addon" aria-hidden="true"><i class="fas fa-check-circle"></i></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutEnd" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LockoutEnd" type="text" id="datepicker" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutReason" class="control-label"></label>
            </div>
            <div class="col-4">
                <textarea type="text" class="form-control" aria-label="With textarea"></textarea>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccessFailedCount" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="AccessFailedCount" class="form-control">
            </div>

        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>



@section Scripts {
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>


    @{await Html.RenderPartialAsync( "_ValidationScriptsPartial" );}
}
